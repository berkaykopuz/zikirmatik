{
  "expo": {
    "name": "Zikirmatik",
    "slug": "zikirmatik-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/icon.png",
    "scheme": "zikirmatikapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/icons/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.berkaykopuz.zikirmatikapp",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "react-native-android-widget",
        {
          "fonts": [
            "./assets/fonts/DS-DIGI.ttf"
          ],
          "widgets": [
            {
              "name": "ZikhrHome",
              "label": "Zikirmatik",
              "minWidth": "140dp",
              "minHeight": "120dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "previewImage": "./assets/widget-preview/zikhr-home.png",
              "updatePeriodMillis": 1800000
            }
          ]
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/JosefinSans-Bold.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "DSdigi",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/DS-DIGI.ttf",
                    "weight": 800
                  }
                ]
              },
              {
                "fontFamily": "JosefinSans",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/JosefinSans-SemiBold.ttf",
                    "weight": 800
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icons/icon.png",
          "color": "#03c459",
          "sounds": []
        }
      ],
      "expo-audio",
      "expo-dev-client",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-7326975715449797~4674409381"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "assets": [
      "./assets/fonts/"
    ],
    "entryPoint": "./index.ts",
    "extra": {
      "router": {},
      "react-native-google-mobile-ads": {
        "androidAppId": "ca-app-pub-7326975715449797~4674409381",
        "userTrackingUsageDescription": "Tracking"
      },
      "eas": {
        "projectId": "b4647f1f-b394-43cb-8d72-e910961db6ad"
      }
    },
    "owner": "berkaykopuz1"
  }
}
