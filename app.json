{
  "expo": {
    "name": "zikirmatik-app",
    "slug": "zikirmatik-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "zikirmatikapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.berkaykopuz.zikirmatikapp",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "react-native-android-widget",
        {
          "fonts": ["./assets/fonts/DS-DIGI.ttf"],   

          "widgets": [
            {
              "name": "ZikhrHome",
              "label": "Zikirmatik",

              "minWidth": "200dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,

              "description": "Zikir ismi ve sayacÄ±",
              "previewImage": "./assets/widget-preview/zikhr-home.png",
              "updatePeriodMillis": 1800000
            }
          ]
        }
      ],
      
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/JosefinSans-Bold.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "DSdigi",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/DS-DIGI.ttf",
                    "weight": 800
                  }
                ]
              },
              {
                "fontFamily": "JosefinSans",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/JosefinSans-SemiBold.ttf",
                    "weight": 800
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/android-icon-foreground.png",
          "color": "#03c459",
          "sounds": []
        }
      ],
      "expo-audio",
      "expo-dev-client"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "assets": [
      "./assets/fonts/"
    ],
    "entryPoint": "./index.ts",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4d97e1b0-fca1-4b23-b5f6-818a25aa227c"
      }
    }
  }
}
